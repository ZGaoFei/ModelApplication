<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.zgf.modelapplication.ui.activity.ButterKnifeTestActivity">

    <Button
        android:id="@+id/bt_bk_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test bk button"/>

    <TextView
        android:id="@+id/tv_bk_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="test bk text view"/>

    <LinearLayout
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical" />

    <ListView
        android:id="@+id/lv_bk_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
